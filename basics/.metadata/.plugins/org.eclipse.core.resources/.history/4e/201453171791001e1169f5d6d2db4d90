#include <stdint.h>
#include "stm32f4xx.h"
#include "gpio_driver.h"

#define GPIO_RED_LED		1
#define GPIO_GREEN_LED		3
#define GPIO_BLUE_LED		5

int main(void)
{

	EnablePeriClk(GPIOD);
	GPIOSetMode(GPIOD, GPIO_RED_LED, GPIO_MODE_OUTPUT);
	GPIOSetMode(GPIOD, GPIO_GREEN_LED, GPIO_MODE_INPUT);
	GPIOSetMode(GPIOD, GPIO_BLUE_LED, GPIO_MODE_OUTPUT);

	//GPIOWritePin(GPIOD, GPIO_RED_LED, GPIO_HIGH);
	GPIOWritePin(GPIOD, GPIO_GREEN_LED, GPIO_HIGH);
	//GPIOWritePin(GPIOD, GPIO_BLUE_LED, GPIO_HIGH);

	while(1)
	{

	}

	return 0;
}
