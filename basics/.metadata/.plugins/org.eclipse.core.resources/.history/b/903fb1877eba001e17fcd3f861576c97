#include <stdint.h>
#include <stdio.h>
#include <string.h>
#include "stm32f4xx.h"
#include "gpio_driver.h"
#include "common_utils.h"
#include "external_interrupt_config.h"

#define USART2_IRQ_NUM	38

extern struct USART_Handle_t Test_USART;

static char message[] = "Hello World!!!\r\n";
static int tx_count = 0;

int main(void)
{


	//Configure the Timer
	configure_delay_timer();

	//Configure UART
	configure_uart();

	//Enable the UART Interrupt
	NVIC_EnableIRQ(USART2_IRQ_NUM);
	USART_EnableTXEInterrupt(&Test_USART);

	while(1)
	{
		//USART_SendData(&Test_USART, (uint8_t *)message, strlen(message));
	}

	return 0;
}

void USART2_IRQHandler(void)
{
	if(tx_count < strlen(message))
	{
		Test_USART.pUSART->USART_DR = message[tx_count];
		tx_count++;
	}

	return;
}

