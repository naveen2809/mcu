#ifndef INC_RTC_DRIVER_H_
#define INC_RTC_DRIVER_H_

#include "stm32f4xx.h"
#include "gpio_driver.h"

struct RTC_RegDef_t
{
	uint32_t RTC_TR;
	uint32_t RTC_DR;
	uint32_t RTC_CR;
	uint32_t RTC_ISR;
	uint32_t RTC_PRER;
	uint32_t RTC_WUTR;
	uint32_t RTC_CALIBR;
	uint32_t RTC_ALRMAR;
	uint32_t RTC_ALRMBR;
	uint32_t RTC_WPR;
	uint32_t RTC_SSR;
	uint32_t RTC_SHIFTR;
	uint32_t RTC_TSTR;
	uint32_t Reserved1;
	uint32_t RTC_TSSSR;
	uint32_t RTC_CALR;
	uint32_t RTC_TAFCR;
	uint32_t RTC_ALRMASSR;
	uint32_t RTC_ALRMBSSR;
	uint32_t Reserved2;
	uint32_t RTC_BKP0R[20];
};

#endif /* INC_RTC_DRIVER_H_ */
