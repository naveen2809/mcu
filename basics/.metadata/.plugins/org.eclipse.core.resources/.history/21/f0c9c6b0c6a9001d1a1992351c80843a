#include <stdint.h>
#include <stdio.h>

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

void TIM2_IRQHandler(void);
void I2C1_EV_IRQHandler(void);

#define NVIC_BASE_ADDR 					0xE000E100UL
#define NVIC_ISER0_ADDR					0xE000E100UL
#define NVIC_ISPR0_ADDR					0XE000E200UL
#define IRQNO_TIMER2					28
#define IRQNO_I2C1						31

int main(void)
{
    /* Loop forever */

	uint32_t *pNVIC_ISER0 = (uint32_t *) NVIC_ISER0_ADDR;
	uint32_t *pNVIC_ISPR0 = (uint32_t *) NVIC_ISPR0_ADDR;

	*pNVIC_ISPR0 |= (1 << IRQNO_TIMER2);
	*pNVIC_ISPR0 |= (1 << IRQNO_I2C1);
	*pNVIC_ISER0 |= (1 << IRQNO_TIMER2);

	for(;;);
}

void TIM2_IRQHandler(void)
{
	printf("Timer2 ISR\n");
	*pNVIC_ISER0 |= (1 << IRQNO_I2C1);
	while(1);
}

void I2C1_EV_IRQHandler(void)
{
	printf("I2C1 ISR\n");
	while(1);
}
